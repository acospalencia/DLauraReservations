@model IEnumerable<DLaura.BusinessLogic.DTOs.UserResponse>

@{
    ViewData["Title"] = "Administración de Usuarios";
}

<h1>Administración de Usuarios</h1>
<p>
    <a asp-action="Create" class="btn btn-info">Crear nuevo usuario</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                    <button type="button" class="btn btn-danger" onclick="deleteUser(@item.Id)">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function deleteUser(id) {
            if (confirm('¿Está seguro de que desea eliminar este usuario?')) {
                fetch('@Url.Action("DeleteUser", "User")' + '?id=' + id, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Error al eliminar el usuario');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al eliminar el usuario');
                });
            }
        }
    </script>
}
